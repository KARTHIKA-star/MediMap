<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFEFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Larger ImageView with proper scaling -->
        <ImageView
            android:id="@+id/imgRegister"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img"
            android:contentDescription="Registration Image" />

        <!-- Title -->
        <TextView
            android:text="Sign Up Now!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Unified EditText widths and heights -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="321dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/search_box_bg"
            android:hint="Username"
            android:inputType="textPersonName"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="318dp"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/search_box_bg"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="321dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/search_box_bg"
            android:hint="Phone Number"
            android:inputType="phone"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="320dp"
            android:layout_height="59dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/search_box_bg"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="314dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/search_box_bg"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#736CED"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Already have an account? Login"
            android:textColor="#736CED"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
